package com.cg.corejava.arrays;

import java.util.Arrays;
import java.util.stream.Stream;

public class Exercise2 {

	public String[] getSortedStringWithCaseMod(String ar[]) {
		ar = Stream.of(ar).sorted().toArray(String[]::new);
		for(int i=0; i<Math.ceil(ar.length); i++) {
			ar[i]=ar[i].toLowerCase();
			ar[ar.length-i-1]=ar[ar.length-i-1].toUpperCase();
		}
		return ar;
	}
	
}
