package com.cg.democollection.service;

import java.util.Arrays;
import java.util.List;

import com.cg.democollection.dto.Employee;

public class WildCardCheck {

	public static void main(String[] args) {
		
		List<Integer> l1= Arrays.asList(1,2,3,4);
		List<Double> l2=Arrays.asList(1.1,2.2,3.3,4.4);
		List<String> l3=Arrays.asList("Alpha","Beta","Gamma");
		List<Employee> l4=Arrays.asList(new Employee<>(), new Employee<>());
		
		//Bounded Wilcard
		System.out.println(getIndexZeroBounded(l1));
		System.out.println(getIndexZeroBounded(l2));
		
		//Unbounded Wildcard
		System.out.println(getIndexZeroUnbounded(l1));
		System.out.println(getIndexZeroUnbounded(l2));
		System.out.println(getIndexZeroUnbounded(l3));
	}
	
	//Bounded Wildcard
	public static double getIndexZeroBounded(List<? extends Number> list) {
		return list.get(0).doubleValue();
	}
	
	//Unbounded Wildcard
	public static String getIndexZeroUnbounded(List<?> list) {
		return (""+list.get(0));
	} 

}
