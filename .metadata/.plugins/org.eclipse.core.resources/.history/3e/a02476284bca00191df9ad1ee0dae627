package com.cg.democollection.service;

import java.util.Arrays;
import java.util.List;

public class WildCardCheck {

	public static void main(String[] args) {
		
		List<Integer> l1= Arrays.asList(1,2,3,4);
		List<Double> l2=Arrays.asList(1.1,2.2,3.3,4.4);
		List<String> l3=Arrays.asList("Alpha","Beta","Gamma");
		List<Object> l4=Arrays.asList(null, null, null);
		
		//Upper Bounded Wilcard
		System.out.println(getIndexUpperBounded(l1));
		System.out.println(getIndexUpperBounded(l2));
		
		//Unbounded Wildcard
		System.out.println(getIndexZeroUnbounded(l1));
		System.out.println(getIndexZeroUnbounded(l2));
		System.out.println(getIndexZeroUnbounded(l3));
		System.out.println(getIndexZeroUnbounded(l4));
	}
	
	//Upper Bounded Wildcard
	public static String getIndexUpperBounded(List<? extends Number> list) {
		return ""+list.get(0);
	}
	
	//Unbounded Wildcard
	public static String getIndexZeroUnbounded(List<?> list) {
		return ""+list.get(0);
	} 
	
	//Lowerbounded Wildcard
	public static String getIndexZeroLowerBounded(List<? super Integer> list) {
		return ""+list.get(0);
	}

}
